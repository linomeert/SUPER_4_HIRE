<div class="container">
  <div class="container-profile">
    <div class="container-info">
      <div class="profile-text">
         <div class="superhero-name">
           <p><%= @superhero.name %></p>
         </div>
         <div class="power">
           <p> POWER <p>
           <p><%= @superhero.power.name %></p>
         </div>
         <div class="hero-info">
            <p><%= @superhero.bio %></p>
         </div>
      </div>
      <div class="heroimg" style="background:url(<%= @superhero.image %>)"></div>
  <div class="profile-text">
    <div class="superhero-name">
      <p><%= @superhero.name %></p>
    </div>

    <div class="form_add_booking">
      <%= simple_form_for [current_user, @superhero, @booking],  url: user_superhero_bookings_path(current_user, @superhero), method: :post do |f| %>
        <%= f.input :description %>
        <br>
        <%= f.input :start_date %>
        <br>
        <%= f.input :end_date %>
        <br>
        <br>
        <%= f.submit "Save", class: "btn btn-primary newbtn" %>
      <% end %>
    </div>
  </div>
</div>
</div>
